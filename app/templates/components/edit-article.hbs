{{#if editArticleForm}}
  <h4>Update Article</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title" placeholder=article.title}}
      </div>
      <div class="form-group">
        {{#x-select value=dropdown}}
          {{#x-option value="news"}}News{{/x-option}}
          {{#x-option value="entertainment"}}Entertainment{{/x-option}}
          {{#x-option value="fashion"}}Fashion &amp; Beauty{{/x-option}}
          {{#x-option value="lifestyle"}}Lifestyle{{/x-option}}
          {{#x-option value="books"}}Books{{/x-option}}
        {{/x-select}}
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" placeholder=article.author}}
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input value=date id="date" placeholder=article.date}}
      </div>
      <div class="form-group">
        <label for="body">Body:</label>
        {{input value=body id="body" placeholder=article.body}}
      </div>
      <div class="form-group">
        <label for="image">Image URL:</label>
        {{input value=image id="image" placeholder=article.image}}
      </div>
      <button {{action 'edit' article}} class="btn btn-primary">Submit</button>
    </form>
  </div>
{{else}}
  <button {{action 'editArticleForm'}}class="btn btn-info btn-xs">Edit</button>
{{/if}}
