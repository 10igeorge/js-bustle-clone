<header class="jumbotron">
  <h1>Bustle Clone</h1>
</header>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'index'}}<a class="navbar-brand" href="#">Bustle</a>{{/link-to}}
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav navbar-right">
        <li class="active">{{#link-to 'news'}}News <span class="sr-only">(current)</span>{{/link-to}}</li>
        <li>{{#link-to 'entertainment'}}Entertainment{{/link-to}}</li>
        <li>{{#link-to 'fashion-beauty'}}Fashion &amp; Beauty{{/link-to}}</li>
        <li>{{#link-to 'lifestyle'}}Lifestyle{{/link-to}}</li>
        <li>{{#link-to 'books'}}Books{{/link-to}}</li>
        {{#bs-dropdown tagName="li"}}
          {{#bs-dropdown-toggle}}About <span class="caret"></span>{{/bs-dropdown-toggle}}
          {{#bs-dropdown-menu}}
            <li>{{#link-to 'about'}}About us{{/link-to}}</li>
            <li>{{#link-to 'apps'}}Apps{{/link-to}}</li>
            <li>{{#link-to 'contact'}}Contact{{/link-to}}</li>
          {{/bs-dropdown-menu}}
        {{/bs-dropdown}}
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>



<div class="container">
  {{outlet}}
  <hr>

  <footer>
    {{#link-to 'index' class="btn btn-primary"}} Home {{/link-to}}
    {{#link-to 'admin' class="btn btn-primary"}} Admin {{/link-to}}
  </footer>
</div>
